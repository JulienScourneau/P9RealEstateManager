<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/property_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/property_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/estate_image_height"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/property_image"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/property_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/property_item_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/estate_text_margin"
            android:textSize="16sp"
            tools:text="Fake_category" />

        <TextView
            android:id="@+id/property_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/property_item_category"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/estate_text_margin"
            android:textSize="16sp"
            tools:text="Fake_location" />

        <TextView
            android:id="@+id/property_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/property_item_location"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/estate_text_margin"
            android:textSize="16sp"
            tools:text="Fake_price" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>