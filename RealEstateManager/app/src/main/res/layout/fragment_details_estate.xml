<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryDark"
    tools:context=".view.DetailsFragment">

    <LinearLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondaryDark"
        android:orientation="vertical">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/details_viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/estate_details_viewpager" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/estate_details_linearlayout_margin"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/details_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    tools:text="700 000 €" />

                <TextView
                    android:id="@+id/details_category"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:text="Brussels" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/global_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/estate_details_linearlayout_margin"
                android:background="@drawable/rounded_corner"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/details_area_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/details_icon_padding"
                        android:src="@drawable/baseline_settings_overscan_black_24" />

                    <TextView
                        android:id="@+id/details_area_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/icon_title_text_marginStart"
                        android:layout_toEndOf="@+id/details_area_img"
                        android:text="Surface"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/details_area_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_area_text"
                        android:layout_alignStart="@+id/details_area_text"
                        android:layout_marginStart="@dimen/icon_text_marginStart"
                        tools:text="600 m²" />

                    <ImageView
                        android:id="@+id/details_room_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_area_data"
                        android:padding="@dimen/details_icon_padding"
                        android:src="@drawable/baseline_home_black_24" />

                    <TextView
                        android:id="@+id/details_room_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_area_data"
                        android:layout_alignStart="@+id/details_area_text"
                        android:layout_marginTop="@dimen/icon_title_text_marginTop"
                        android:layout_toEndOf="@+id/details_area_img"
                        android:text="Room"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/details_room_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_room_text"
                        android:layout_alignStart="@+id/details_area_text"
                        android:layout_marginStart="@dimen/icon_text_marginStart"
                        tools:text="6" />

                    <ImageView
                        android:id="@+id/details_bathroom_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_room_data"
                        android:padding="@dimen/details_icon_padding"
                        android:src="@drawable/baseline_hot_tub_black_24" />

                    <TextView
                        android:id="@+id/details_bathroom_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_room_data"
                        android:layout_alignStart="@+id/details_area_text"
                        android:layout_marginTop="@dimen/icon_title_text_marginTop"
                        android:layout_toEndOf="@+id/details_area_img"
                        android:text="Bathroom"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/details_bathroom_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_bathroom_text"
                        android:layout_alignStart="@+id/details_area_text"
                        android:layout_marginStart="@dimen/icon_text_marginStart"
                        tools:text="1" />

                    <ImageView
                        android:id="@+id/details_bedroom_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_bathroom_data"
                        android:padding="@dimen/details_icon_padding"
                        android:src="@drawable/baseline_hotel_black_24" />

                    <TextView
                        android:id="@+id/details_bedroom_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_bathroom_data"
                        android:layout_alignStart="@+id/details_area_text"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/details_area_img"
                        android:text="Bedroom"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/details_bedroom_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_bedroom_text"
                        android:layout_alignStart="@+id/details_area_text"
                        android:layout_marginStart="@dimen/icon_text_marginStart"
                        tools:text="2" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/details_location_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/details_icon_padding"
                        android:src="@drawable/baseline_place_black_24" />

                    <TextView
                        android:id="@+id/details_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/icon_title_text_marginStart"
                        android:layout_toEndOf="@+id/details_location_img"
                        android:text="@string/location_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/details_location_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_location_text"
                        android:layout_alignStart="@+id/details_location_text"
                        android:layout_marginStart="@dimen/icon_text_marginStart" />

                    <ImageView
                        android:id="@+id/details_contact_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_location_data"
                        android:padding="@dimen/details_icon_padding"
                        android:src="@drawable/baseline_person_black_24" />

                    <TextView
                        android:id="@+id/details_contact_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_location_data"
                        android:layout_marginStart="@dimen/icon_title_text_marginStart"
                        android:layout_marginTop="@dimen/icon_title_text_marginTop"
                        android:layout_toEndOf="@+id/details_contact_img"
                        android:text="Contact"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/details_contact_name_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_contact_text"
                        android:layout_alignStart="@+id/details_contact_text"
                        android:layout_marginStart="@dimen/icon_text_marginStart"
                        tools:text="Fake Name" />

                    <TextView
                        android:id="@+id/details_contact_phone_number_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_contact_name_data"
                        android:layout_alignStart="@+id/details_contact_text"
                        android:layout_marginStart="@dimen/icon_text_marginStart"
                        tools:text="000.000.000" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/estate_details_linearlayout_margin"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/details_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/description_text_details"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/details_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/description_text_margin"
                    tools:text="Fake Description on multiple line to avoid problem with textView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/estate_details_linearlayout_margin"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/details_POI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Point d'intérêt"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/details_school_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="@dimen/details_icon_padding"
                            android:src="@drawable/ic_baseline_school_24"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="École"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_local_commerce_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/details_icon_padding"
                            android:src="@drawable/ic_baseline_shopping_cart_24"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Commerce Local"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/details_public_transport_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/details_icon_padding"
                            android:src="@drawable/ic_baseline_directions_bus_24"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Transport public"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_park_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/details_icon_padding"
                            android:src="@drawable/ic_baseline_nature_people_24"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Parc et espace vert"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/details_sale_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/details_icon_padding"
                    android:src="@drawable/baseline_event_black_24" />

                <TextView
                    android:id="@+id/details_sale_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/estate_item_text_margin_start"
                    android:layout_marginTop="@dimen/icon_title_text_marginTop"
                    android:layout_toEndOf="@+id/details_sale_img"
                    android:text="En vente depuis:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/details_sale_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_sale_text"
                    android:layout_alignStart="@+id/details_sale_text"
                    android:layout_marginStart="@dimen/icon_text_marginStart"
                    tools:text="00/00/00" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>